{
    "name": "@scrollmeter/core",
    "version": "0.0.0",
    "description": "Scrollmeter is a lightweight JavaScript library that visually displays scroll progress on web pages.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./dist/index.css": "./dist/index.css"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "style": "./dist/index.css",
    "sideEffects": [
        "*.scss",
        "*.css"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "html-to-image": "^1.11.11",
        "sass": "^1.82.0",
        "semantic-release": "^23.0.0",
        "vite": "^5.0.0",
        "vite-plugin-dts": "^4.3.0"
    },
    "dependencies": {},
    "publishConfig": {
        "access": "public"
    },
    "author": "suhyeon.jeon",
    "license": "MIT",
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "package.json",
                        "CHANGELOG.md",
                        "README.md"
                    ]
                }
            ]
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/freechird2/scrollmeter.git"
    },
    "homepage": "https://github.com/freechird2/scrollmeter#readme",
    "bugs": {
        "url": "https://github.com/freechird2/scrollmeter/issues"
    },
    "keywords": [
        "scroll",
        "scrollmeter",
        "scroll-progress",
        "scroll-indicator",
        "progress-bar",
        "scroll-position",
        "scroll-tracker",
        "reading-progress",
        "react",
        "react-component",
        "ui-component",
        "reading-meter"
    ]
}
