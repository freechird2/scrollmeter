{
    "name": "@scrollmeter/react",
    "version": "0.0.0-development",
    "description": "React hooks for Scrollmeter, a lightweight JavaScript library that visually displays scroll progress on web pages.",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch"
    },
    "devDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "vite": "^5.0.0",
        "vite-plugin-dts": "^4.3.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "suhyeon.jeon",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/freechird2/scrollmeter.git"
    },
    "homepage": "https://github.com/freechird2/scrollmeter#readme",
    "bugs": {
        "url": "https://github.com/freechird2/scrollmeter/issues"
    },
    "keywords": [
        "scroll",
        "scrollmeter",
        "react",
        "hooks",
        "scroll-progress",
        "scroll-indicator",
        "progress-bar",
        "scroll-position",
        "scroll-tracker",
        "reading-progress",
        "react-component",
        "ui-component",
        "reading-meter"
    ]
}
