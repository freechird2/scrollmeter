{
    "name": "@scrollmeter/react",
    "version": "0.0.0",
    "description": "React hooks and components for Scrollmeter - A lightweight JavaScript library that visually displays scroll progress on web pages",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/freechird2/scrollmeter.git"
    },
    "homepage": "https://github.com/freechird2/scrollmeter#readme",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "./dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc && vite build && tsc --emitDeclarationOnly"
    },
    "dependencies": {
        "@scrollmeter/core": "^1.1.0"
    },
    "peerDependencies": {
        "react": ">=16.8.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "typescript": "^4.0.0",
        "vite": "^5.4.11"
    }
}
